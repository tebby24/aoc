{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run active file",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++ -g '${file}' && ./a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "echo": false,
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}